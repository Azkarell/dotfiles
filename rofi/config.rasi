 window {
 	border-radius:                  5px;
 	width:			    	50%;
 	padding: 			28px;
 }
 
 prompt {
 	enabled:			true;
 	padding:			0.5% 32px 0% 0.5%;
 	font:				"HarmonyOS Sans SC bold 12";
 }
 
 entry {
     	placeholder:			"Search";
     	expand:                         true;
     	padding:                        0.15% 0% 0% 0%;
 }
 
 inputbar {
 	children:			[ prompt, entry ];
     	expand:                         false;
     	border-radius:                  6px;
     	margin:                         0%;
     	padding:                        10px;
 }
 
 listview {
     	columns:                        4;
     	lines:	                        3;
     	cycle:                          false;
     	dynamic:                        true;
     	layout:                         vertical;
 }
 
 mainbox {
     	children:                       [ inputbar, listview ];
     	spacing:                       	2%;
     	padding:                        2% 1% 2% 1%;
 }
 
 element {
     	orientation:                    vertical;
     	padding:                        2% 0% 2% 0%;
 }
 
 element-icon {
     	size:                           128px;
     	horizontal-align:	 	0.5;
 }
 
 element-text {
     	expand:                         true;
     	horizontal-align:               0.5;
     	vertical-align:                 0.5;
     	margin:                         0.5% 0.5% -0.5% 0.5%;
 }
