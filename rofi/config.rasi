configuration {
	modi:				"drun,window,emoji,combi,filebrowser";
	font:				"FiraCode Nerd Font bold 8";
	show-icons:                     true;
	icon-theme: 			"Reversal-dark";
	display-drun: 			"";
	drun-display-format:            "{name}";
	sidebar-mode: 			false;
	dpi:			        128;
        me-accept-entry:	        "!MousePrimary";
}
@import "~/.config/rofi/theme.rasi"
element-text {
	    backgorund-color: inherit;
	    text-color: inherit;
}
